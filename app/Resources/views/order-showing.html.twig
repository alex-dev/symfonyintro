{% extends 'order-showing-base.html.twig' %}

{% block title -%}
  {%- trans from 'menus' into currentlocale -%}
    order.showing
  {%- endtrans -%}
{%- endblock %}

{%- block scripts %}
  <script defer src="{{ asset('vendor/moment.js/moment-with-locale.js') }}"></script>
  <script defer src="{{ asset('js/moment-initialize.js') }}"></script>
  <script defer src="{{ asset('js/moment-interval-handler.js') }}"
    data-time="{{ order.date | date('Y-m-d\TH:i:s.vP', false) }}"
    data-time-to-cancel-label="{{ order.timetocancel | trans() }}"
    data-cancel-label="{{ order.cancel | trans() }}"
    data-action="{{ path('order_cancel', { 'key': order.key }) }}">
  </script>
{% endblock -%}

{% block heading -%}
  {%- include 'snippets/heading.html.twig' with {
    current: 'order.showing',
    items: { 'order.listing': path('') }
  } only -%}
{%- endblock %}

{% block sidebar -%}
  <div class="row">
    <span>order.date:&nbsp;</span>
    <span class="date">{{- order.date | date('Y-m-d\TH:i:s.vP', false) -}}</span>
  </div>
{%- endblock %}
