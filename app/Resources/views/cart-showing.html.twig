{% extends 'base.html.twig' %}

{% block title -%}
  {%- trans from 'menus' into currentlocale -%}
    cart
  {%- endtrans -%}
{%- endblock %}

{% block heading -%}
  {%- include 'snippets/heading.html.twig' with {
    current: 'cart',
    items: { }
  } only -%}
{%- endblock %}

{% block body -%}
  {%- set cost = order.cost -%}
  <div class="container">
    <div class="row bar">
      <div class="col-lg-3">
        <div id="order-summary" class="box mt-0 mb-4 p-0">
          <div class="box-header mt-0">
            <h3>order.summary</h3>
          </div>
            <div class="table-responsive">
              <table class="table">
                <tbody>
                  <tr>
                    <td>order.subtotal</td>
                    <th>
                      {{- cost.cost.write(currentlocale) -}}
                    </th>
                  </tr>
                  <tr>
                    <td>order.shipping</td>
                    <th>
                      {{- cost.shipping.write(currentlocale) -}}
                    </th>
                  </tr>
                  {%- for name, tax in cost.taxes -%}
                  <tr>
                    <td>
                    {# TPS, TVQ #}
                      {{- name | trans({}, 'messages', currentlocale) -}}
                    </td>
                    <th>
                      {{- tax.write(currentlocale) -}}
                    </th>
                  </tr>
                  {%- endfor -%}
                  <tr class="total">
                    <td>Total</td>
                    <th>
                      {{- cost.total.write(currentlocale) -}}
                    </th>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
        <div id="basket" class="col">
          <div class="box mt-0 pb-0 no-horizontal-padding">
            <form method="post" action="">
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th colspan="2">
                        {%- trans from 'messages' into currentlocale -%}
                          product
                        {%- endtrans -%}
                      </th>
                      <th>
                        {%- trans from 'messages' into currentlocale -%}
                          quantity
                        {%- endtrans -%}
                      </th>
                      <th>
                        {%- trans from 'messages' into currentlocale -%}
                          unitprice
                        {%- endtrans -%}
                      </th>
                      {# To be implemented later
                      <th>
                        {%- trans from 'messages' into currentlocale -%}
                          discount
                        {%- endtrans -%}
                      </th>#}
                      <th colspan="2">
                        {%- trans from 'messages' into currentlocale -%}
                          total
                        {%- endtrans -%}
                      </th>
                    </tr>
                  </thead>
                  <tbody>
                    {%- for item in order.items -%}
                      <tr>
                        <td>
                          <a href="{{ path('show_product', { 'type': item.product | product_kind, 'key': item.product.key })}}">
                            <img src="{{ asset("databasemedia/#{ item.product.mainimage }.png") }}" alt="{{ 'product.image' | trans({}, 'messages', currentlocale) }}" class="img-fluid"/>
                          </a>
                        </td>
                        <td>
                          <a href="{{ path('show_product', { 'type': item.product | product_kind, 'key': item.product.key })}}">
                            {{- item.product.translate(currentlocale).name -}}
                          </a>
                        </td>
                        <td>
                          <input type="number" value="{{ item.quantity }}" class="form-control"/>
                        </td>
                        <td>
                          {{- item.cost.write(currentlocale) -}}
                        </td>
                        {#<td>
                          {{- item.cost.write(currentlocale) -}}
                        </td>#}
                        <td>
                          {{- item.cost.multiplyByConstant(item.quantity).write(currentlocale) -}}
                        </td>
                          <td>
                            <button type="submit" class="btn btn-secondary">
                              <i class="fa fa-trash-o"></i>
                            </button>
                          </td>
                      </tr>
                    {%- endfor -%}
                  </tbody>
                  <tfoot>
                    <tr>
                      <th colspan="5">
                        {%- trans from 'messages' into currentlocale -%}
                          total
                        {%- endtrans -%}
                      </th>
                      <th colspan="2">
                        {{- cost.cost.write(currentlocale) -}}
                      </th>
                    </tr>
                  </tfoot>
                </table>
                </div>
                <div class="box-footer d-flex justify-content-between align-items-center">
                  <div class="left-col">
                    <a href="{{ path('list_products') }}" class="btn btn-secondary mt-0">
                      <i class="fa fa-chevron-left"></i>
                      {%- trans from 'messages' into currentlocale -%}
                        continue.shopping
                      {%- endtrans -%}
                    </a>
                  </div>
                  <div class="right-col">
                    <button type="submit" class="btn btn-secondary">
                      <i class="fa fa-refresh"></i>
                      {%- trans from 'messages' into currentlocale -%}
                        cart.update
                      {%- endtrans -%}
                    </button>
                    <button type="submit" class="btn btn-template-outlined">
                      {%- trans from 'messages' into currentlocale -%}
                        checkout
                      {%- endtrans -%}
                      <i class="fa fa-chevron-right"></i>
                    </button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{%- endblock %}
