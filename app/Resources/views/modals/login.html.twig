{% extends 'modals/base.html.twig' %}

{% block modalid -%}login-modal{%- endblock %}

{% block title -%}
  {%- trans from 'messages' into currentlocale -%}
    login.customer
  {%- endtrans -%}
{%- endblock %}

{% block body -%}
  {# login route #}
  <form action="#" method="post">
    <div class="form-group">
      <input id="email_modal" type="text" placeholder="{{ 'email' | trans([], 'messages', locale) }}" class="form-control"/>
    </div>
    <div class="form-group">
      <input id="password_modal" type="password" placeholder="{{ 'password' | trans([], 'messages', locale) }}" class="form-control"/>
    </div>
    <div class="text-center">
      <button class="btn btn-template-outlined">
        <i class="fa fa-sign-in"></i>
        <span>
          {%- trans from 'messages' into currentlocale -%}
            login
          {%- endtrans -%}
        </span>
      </button>
    </div>
  </form>
  <div class="text-center text-muted">
    <p>
      {%- trans from 'messages' into currentlocale -%}
        register.not
      {%- endtrans -%}
    </p>
    {# customer-register.html #}
    <p>
      <a href="#">
        <strong>
          {%- trans from 'messages' into currentlocale -%}
            register.now
          {%- endtrans -%}
        </strong>
      </a>
    </p>    
  </div>
{%- endblock %}
